#!/usr/bin/env bash
# a script for creating 301 redirection

sudo apt-get update
sudo apt-get install nginx -y
sudo ufw allow 80;
sudo echo "Hello World!" > index.html
sudo mv index.html /var/www/html/
line="\tlocation \/redirect_me {\n\t\treturn 301 \$scheme:\/\/https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4;\n\t}"
sudo sed  "/server_name _;/a\\$line" /etc/nginx/sites-available/default
sudo service nginx restart
