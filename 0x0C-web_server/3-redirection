#!/usr/bin/env bash
# a script for creating 301 redirection

apt-get update
apt-get install nginx -y
ufw allow 80;
echo "Hello World!" > /var/www/html/index*.html
sed -i "0,/}/s//}\
	location \/redirect_me {\
		return 301 \$scheme:\/\/https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4;\
	}/g" /etc/nginx/sites-available/default
service nginx restart
